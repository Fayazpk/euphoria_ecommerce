<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
  <style>
    .sidebar {
      height: 100vh;
      width: 250px;
      position: fixed;
      background: linear-gradient(135deg, #6a11cb, #2575fc);
      padding: 20px;
    }
    .content {
      margin-left: 250px;
      padding: 20px;
    }
    .nav-link {
      color: white;
      padding: 10px;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .nav-link:hover {
      background: rgba(255,255,255,0.1);
      color: white;
    }
    .nav-link i {
      width: 20px;
    }
  </style>
</head>
<body>
  <div class="d-flex">
    <div class="sidebar">
      <h3 class="text-white mb-4">Admin Panel</h3>
      <nav class="nav flex-column">
        <a href="#" class="nav-link">
          <i class="fas fa-chart-line"></i>
          <span>Dashboard</span>
        </a>
        <%= link_to admin_products_path, class: "nav-link" do %>
          <i class="fas fa-box"></i>
          <span>Products</span>
        <% end %>        
        <%= link_to admin_categories_path, class: "nav-link" do %>
          <i class="fas fa-folder"></i>
          <span>Categories</span>
        <% end %>
        <%= link_to admin_subcategories_path, class: "nav-link" do %>
          <i class="fas fa-tags"></i>
          <span>Subcategories</span>
        <% end %>
        <a href="<%= admin_orders_path %>" class="nav-link">
          <i class="fas fa-shopping-cart"></i>
          <span>Orders</span>
        </a>

        <a href="<%= admin_coupons_path %>" class="nav-link">
          <i class="fas fa-ticket-alt"></i>
          <span>Coupons</span>
        </a>
        <a href="#" class="nav-link">
          <i class="fas fa-users"></i>
          <span>Users</span>
        </a>
        <a href="#" class="nav-link">
          <i class="fas fa-image"></i>
          <span>Banners</span>
        </a>
      </nav>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>