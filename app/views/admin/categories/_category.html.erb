<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= category.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= link_to category.image.filename, category.image if category.image.attached? %>
  </p>

</div>
