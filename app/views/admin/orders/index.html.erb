<% provide(:title, 'Orders') %>
<div class="container mt-5">
  <h1 class="mb-4">Orders</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>User</th>
        <th>Total Price</th>
        <th>Payment Status</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user.email %></td>
          <td><%= number_to_currency(order.total_price) %></td>
          <td><%= order.payment_status.titleize %></td>
          <td><%= order.status.titleize %></td>
          <td>
            <%= link_to 'Show', admin_order_path(order), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit Status', edit_admin_order_path(order), class: 'btn btn-warning btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @orders %>
</div>
