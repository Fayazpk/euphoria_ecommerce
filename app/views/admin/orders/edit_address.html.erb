<% provide(:title, "Edit Address for Order ##{@order.id}") %>
<div class="container mt-5">
  <h1 class="mb-4">Edit Address</h1>

  <%= form_with(model: @order.address, url: update_address_admin_order_path(@order), method: :patch, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :building_name %>
      <%= f.text_field :building_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :street_address %>
      <%= f.text_field :street_address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :city_name %>
      <%= f.text_field :city_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :state_name %>
      <%= f.text_field :state_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :country_name %>
      <%= f.text_field :country_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
    <%= f.submit 'Update Address', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back to Orders', admin_orders_path, class: 'btn btn-secondary mt-3' %>
</div>
