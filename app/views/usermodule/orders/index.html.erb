<%= render 'layouts/flash_messages' %>
<h1>My Orders</h1>
<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Status</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to 'View', usermodule_order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
