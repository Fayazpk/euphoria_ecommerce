<% if item.returnable? %>
                <%= button_to "Return Item",
                    return_item_usermodule_order_path(@order, item_id: item.id),
                    method: :post,
                    data: { confirm: "Are you sure you want to return this item?" },
                    class: "btn btn-secondary text-sm" %>
              <% elsif item.return_request.present? %>
                <span class="text-sm text-gray-600">
                  Return <%= item.return_request.status %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>