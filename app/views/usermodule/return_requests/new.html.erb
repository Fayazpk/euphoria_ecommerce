<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Return Request</h1>

  <%= form_with(model: [:usermodule, @order, @return_request], local: true) do |f| %>
    <div class="border rounded-lg p-4 mb-6">
      <h2 class="text-lg font-semibold mb-4">Item Details</h2>
      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <p class="text-gray-600">Product</p>
          <p><%= @order_item.product.name %></p>
        </div>
        <div>
          <p class="text-gray-600">Size</p>
          <p><%= @order_item.size %></p>
        </div>
        <div>
          <p class="text-gray-600">Quantity</p>
          <p><%= @order_item.quantity %></p>
        </div>
        <div>
          <p class="text-gray-600">Price</p>
          <p><%= number_to_currency(@order_item.total) %></p>
        </div>
      </div>
    </div>

    <div class="border rounded-lg p-4">
      <h2 class="text-lg font-semibold mb-4">Return Details</h2>
      
      <div class="mb-4">
        <%= f.label :reason, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_area :reason, class: "form-textarea w-full", rows: 4 %>
      </div>

      <%= f.submit "Submit Return Request", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>